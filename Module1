// Module 1 - Sahan
//
#define MOTION_SENSOR_PIN 2
#define LED_PIN 13

void setup() {
  pinMode(MOTION_SENSOR_PIN, INPUT);
  pinMode(LED_PIN, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  int sensorValue = digitalRead(MOTION_SENSOR_PIN);
  
  if (sensorValue == HIGH) {
    digitalWrite(LED_PIN, HIGH);
    Serial.println("Motion is detected! LED ON");
  } else {
    digitalWrite(LED_PIN, LOW);
    Serial.println("No motion is detected! LED OFF");
  }

  delay(1000); // 1000 milliseconds = a second hence wait for a second
}
